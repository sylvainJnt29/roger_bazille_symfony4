{% extends 'base.html.twig' %}

{% block body %}




<div class="container-fluid">
    <h1 class="my-5 text-center">
        Les actus des professeurs
    </h1>
    <div class="text-center mb-3">
        <a href="{{ path('admin_actus_new')}}" class="btn btn-success text-white mb-3">
            <i class="fas fa-plus"></i>
            Cr√©er nouvel article
        </a>    
    </div>
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Introduction</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
          {% for actus in actusProf %}
              <tr>
                <td>{{ actus.id }}</td>
                <td>{{ actus.titre }}</td>
                <td>{{ actus.article }}</td>
                <td>{{ actus.image }}</td>
                <td>
                    <a href="{{ path('admin_actus_edit',{
                        'id' : actus.id
                    })}}" class="btn btn-warning">
                        <i class="fas fa-edit"></i>
                        Editer
                    </a>
                     <a href="{{ path('admin_actus_delete',{
                         'id' : actus.id
                     })}}" class="btn btn-danger">
                        <i class="fas fa-trash"></i>

                        Supprimer
                    </a>
                </td>
            </tr>
          {% endfor %}
        </tbody>
    </table>
</div>


{% endblock %}
